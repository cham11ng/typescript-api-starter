{
  "name": "typescript-api-starter",
  "version": "0.2.0",
  "description": "Starter for Node.js express API with Typescript",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:cham11ng/typescript-api-starter.git"
  },
  "author": {
    "name": "Sagar Chamling",
    "email": "sgr.raee@gmail.com"
  },
  "engines": {
    "node": ">= 16.5.0"
  },
  "scripts": {
    "start": "nodemon",
    "transpile": "tsc",
    "clean": "rimraf build",
    "sync-env": "sync-dotenv",
    "build": "run-s clean lint:fix transpile",
    "send:mail": "ts-node scripts/mail-test",
    "load:fake": "NODE_ENV=test ts-node scripts/fake-loader",
    "test": "NODE_ENV=test yarn migrate && NODE_ENV=test jest --forceExit --detectOpenHandles --maxWorkers=1 --verbose",
    "seed": "knex seed:run --knexfile=knexfile.ts --verbose",
    "migrate": "knex migrate:latest --knexfile=knexfile.ts --verbose",
    "rollback": "knex migrate:rollback --knexfile=knexfile.ts --verbose",
    "make:seeder": "knex seed:make --knexfile=knexfile.ts -x ts",
    "make:migration": "knex migrate:make --knexfile=knexfile.ts -x ts",
    "lint": "eslint . --ext .ts,.json",
    "lint:fix": "eslint --fix . --ext .ts,.json",
    "prettify": "prettier 'src/**/*.ts' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "",
      "pre-push": "yarn build"
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "eslint --fix . --ext .ts,.json"
    ]
  },
  "private": true,
  "license": "MIT",
  "keywords": [
    "api",
    "es6",
    "node",
    "express",
    "javascript",
    "typescript"
  ],
  "dependencies": {
    "bcrypt": "^5.0.1",
    "bookshelf": "^1.2.0",
    "bookshelf-case-converter-plugin": "^2.0.0",
    "chalk": "^4.1.1",
    "cors": "^2.8.5",
    "date-fns": "^2.11.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.19",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.3",
    "nodemailer-markdown": "^1.0.3",
    "pg": "^8.6.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@types/bcrypt": "^5.0.0",
    "@types/bookshelf": "^1.2.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.7",
    "@types/jest": "^26.0.24",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/lodash": "^4.14.171",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.4.0",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "babel-jest": "^27.0.6",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^5.5.3",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.4",
    "sync-dotenv": "^2.6.2",
    "ts-node": "^10.1.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}
