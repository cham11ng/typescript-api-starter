{
  "name": "typescript-api-starter",
  "version": "0.1.0",
  "description": "Starter for Node.js express API with Typescript",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:cham11ng/typescript-api-starter.git"
  },
  "author": {
    "name": "Sagar Chamling",
    "email": "sgr.raee@gmail.com"
  },
  "engines": {
    "node": ">= 8.9.4",
    "npm": ">= 5.6.0"
  },
  "scripts": {
    "start:dev": "backpack",
    "start": "node build/main.js",
    "clean": "rimraf build",
    "prepush": "yarn build",
    "precommit": "lint-staged",
    "transpile": "backpack build",
    "seed": "knex seed:run",
    "migrate": "knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "make:seeder": "knex seed:make",
    "make:migration": "knex migrate:make",
    "build": "run-s clean lint:fix transpile",
    "load:fake": "ts-node scripts/loadFakeData.ts",
    "test": "mocha test/**/*.spec.ts",
    "lint": "tslint src/**/*.{ts,js} test/**/*.{ts,js}",
    "lint:fix": "tslint --fix src/**/*.{ts,js} test/**/*.{ts,js}",
    "prettify": "prettier --single-quote --parser typescript --print-width 120 --write scripts/*.ts src/**/*.{ts,js} test/**/*.{ts,js}"
  },
  "lint-staged": {
    "linters": {
      "*.{ts, js}": [
        "tslint --fix src/**/*.{ts,js} test/**/*.{ts,js}",
        "prettier --single-quote --parser typescript --print-width 120 --write scripts/*.ts src/**/*.{ts,js} test/**/*.{ts,js}",
        "git add"
      ]
    }
  },
  "private": true,
  "license": "MIT",
  "keywords": [
    "api",
    "es6",
    "node",
    "express",
    "javascript",
    "typescript"
  ],
  "dependencies": {
    "body-parser": "^1.18.2",
    "bookshelf": "^0.13.3",
    "bookshelf-camelcase": "^2.0.1",
    "boom": "^7.1.1",
    "chalk": "^2.3.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "helmet": "^3.10.0",
    "http-status-codes": "^1.3.0",
    "joi": "^13.1.2",
    "knex": "0.14",
    "morgan": "^1.9.0",
    "pg": "^7.4.1",
    "winston": "^2.4.0",
    "winston-daily-rotate-file": "^3.1.3"
  },
  "devDependencies": {
    "@types/bookshelf": "^0.9.7",
    "@types/boom": "^7.1.1",
    "@types/chai": "^4.1.2",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/faker": "^4.1.2",
    "@types/helmet": "^0.0.37",
    "@types/joi": "^13.0.5",
    "@types/knex": "^0.14.4",
    "@types/mocha": "^5.2.0",
    "@types/morgan": "^1.7.35",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.7",
    "backpack-core": "^0.7.0",
    "chai": "^4.1.2",
    "faker": "^4.1.0",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.5",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-loader": "^3.5.0",
    "ts-node": "^6.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.7.0",
    "tslint-consistent-codestyle": "^1.11.1",
    "typescript": "^2.8.3"
  }
}
