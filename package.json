{
  "name": "typescript-api-starter",
  "version": "0.1.0",
  "description": "Starter for Node.js express API with Typescript",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:cham11ng/typescript-api-starter.git"
  },
  "author": {
    "name": "Sagar Chamling",
    "email": "sgr.raee@gmail.com"
  },
  "engines": {
    "node": ">= 8.9.4",
    "npm": ">= 5.6.0"
  },
  "scripts": {
    "start": "backpack",
    "run": "node build/main.js",
    "clean": "rimraf build",
    "transpile": "backpack build",
    "build": "run-s clean lint:fix transpile",
    "send:mail": "ts-node scripts/mail-test",
    "load:fake": "ts-node scripts/fake-loader",
    "test": "jest --config jest.json",
    "seed": "knex seed:run --knexfile=knexfile.ts",
    "migrate": "knex migrate:latest --knexfile=knexfile.ts",
    "rollback": "knex migrate:rollback --knexfile=knexfile.ts",
    "make:seeder": "knex seed:make --knexfile=knexfile.ts",
    "make:migration": "knex migrate:make --knexfile=knexfile.ts",
    "lint": "tslint src/**/*.{ts,js} test/**/*.{ts,js}",
    "lint:fix": "tslint --fix src/**/*.{ts,js} test/**/*.{ts,js}",
    "prettify": "prettier --single-quote --parser typescript --print-width 120 --write scripts/*.ts src/**/*.{ts,js} test/**/*.{ts,js}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build"
    }
  },
  "lint-staged": {
    "*.{ts, js}": [
      "tslint --fix src/**/*.{ts,js} test/**/*.{ts,js}",
      "prettier --single-quote --parser typescript --print-width 120 --write scripts/*.ts src/**/*.{ts,js} test/**/*.{ts,js}",
      "git add"
    ]
  },
  "private": true,
  "license": "MIT",
  "keywords": [
    "api",
    "es6",
    "node",
    "express",
    "javascript",
    "typescript"
  ],
  "dependencies": {
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "bookshelf": "^0.14.2",
    "bookshelf-camelcase": "^2.0.1",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "helmet": "^3.15.1",
    "http-status-codes": "^1.3.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "knex": "0.16.3",
    "morgan": "^1.9.1",
    "nodemailer": "^5.1.1",
    "nodemailer-markdown": "^1.0.2",
    "pg": "^7.8.1",
    "winston": "^2.4.0",
    "winston-daily-rotate-file": "^3.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bookshelf": "^0.9.7",
    "@types/cors": "^2.8.3",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/faker": "^4.1.5",
    "@types/helmet": "^0.0.42",
    "@types/jest": "^24.0.9",
    "@types/joi": "^14.3.2",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/knex": "^0.15.2",
    "@types/morgan": "^1.7.35",
    "@types/nodemailer": "^4.6.6",
    "@types/supertest": "^2.0.7",
    "@types/winston": "^2.4.4",
    "backpack-core": "^0.7.0",
    "faker": "^4.1.0",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.0",
    "ts-loader": "^3.5.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.0",
    "typescript": "^3.3.3333"
  }
}
