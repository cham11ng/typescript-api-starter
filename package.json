{
  "name": "typescript-api-starter",
  "version": "0.1.0",
  "description": "Starter for Node.js express API with Typescript",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:cham11ng/typescript-api-starter.git"
  },
  "author": {
    "name": "Sagar Chamling",
    "email": "sgr.raee@gmail.com"
  },
  "engines": {
    "node": ">= 8.9.4",
    "npm": ">= 5.6.0"
  },
  "scripts": {
    "start": "backpack",
    "clean": "rimraf build",
    "transpile": "backpack build",
    "build": "run-s clean lint:fix transpile",
    "send:mail": "ts-node scripts/mail-test",
    "load:fake": "ts-node scripts/fake-loader",
    "test": "jest",
    "seed": "knex seed:run --knexfile=knexfile.ts --verbose",
    "migrate": "knex migrate:latest --knexfile=knexfile.ts --verbose",
    "rollback": "knex migrate:rollback --knexfile=knexfile.ts --verbose",
    "make:seeder": "knex seed:make --knexfile=knexfile.ts",
    "make:migration": "knex migrate:make --knexfile=knexfile.ts",
    "lint": "tslint src/**/*.{ts,js} test/**/*.{ts,js}",
    "lint:fix": "tslint --fix src/**/*.{ts,js} test/**/*.{ts,js}",
    "prettify": "prettier --single-quote --parser typescript --print-width 120 --write scripts/*.ts src/**/*.{ts,js} test/**/*.{ts,js}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build"
    }
  },
  "lint-staged": {
    "*.{ts, js}": [
      "tslint --fix src/**/*.{ts,js} test/**/*.{ts,js}",
      "prettier --single-quote --parser typescript --print-width 120 --write scripts/*.ts src/**/*.{ts,js} test/**/*.{ts,js}",
      "git add"
    ]
  },
  "private": true,
  "license": "MIT",
  "keywords": [
    "api",
    "es6",
    "node",
    "express",
    "javascript",
    "typescript"
  ],
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "bookshelf": "^0.15.1",
    "bookshelf-camelcase": "^2.0.1",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "helmet": "^3.20.0",
    "http-status-codes": "^1.3.2",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "0.19.1",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.0",
    "nodemailer-markdown": "^1.0.3",
    "pg": "^7.12.0",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/bcrypt": "^3.0.0",
    "@types/bookshelf": "^0.13.2",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/faker": "^4.1.5",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.15",
    "@types/joi": "^14.3.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/knex": "^0.16.1",
    "@types/morgan": "^1.7.36",
    "@types/nodemailer": "^6.2.1",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "babel-jest": "^24.8.0",
    "backpack-core": "^0.8.4",
    "faker": "^4.1.0",
    "fork-ts-checker-webpack-plugin": "^1.4.3",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "supertest": "^4.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "typescript": "^3.5.3"
  }
}
